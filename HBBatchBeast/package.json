{
    "name": "hbbatchbeast",
    "productName": "hbbatchbeast",
    "description": "A Handbrake GUI for recursive folder conversion and folder watching",
    "version": "0.1.5",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds --darwinDarkModeSupport=true  --asar.unpackDir='{node_modules/ffprobe-static,node_modules/@ffmpeg-installer}'",
        "package-win": "electron-packager . hbbatchbeast --overwrite  --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"HBBatchBeast\" --asar.unpackDir={node_modules/ffprobe-static,node_modules/@ffmpeg-installer}",
        "package-linux": "electron-packager . hbbatchbeast --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds  --asar.unpackDir={node_modules/ffprobe-static,node_modules/@ffmpeg-installer}",
        "create-installer-mac": "electron-installer-dmg ./release-builds/hbbatchbeast-darwin-x64/hbbatchbeast.app hbbatchbeast --out=release-builds --overwrite --icon=assets/icons/mac/icon.icns ",
        "create-installer-win": "node installers/windows/createinstaller.js",
        "create-debian-installer": "electron-installer-debian --src release-builds/hbbatchbeast-linux-x64/ --arch amd64 --config debian.json"
    },
    "author": "HaveAGitGat",
    "license": "MIT",
    "dependencies": {
        "@ffmpeg-installer/ffmpeg": "^1.0.20",
        "async": "^2.6.3",
        "bcrypt": "^3.0.8",
        "download": "^7.1.0",
        "emailjs": "^2.2.0",
        "ffmpeg": "0.0.4",
        "ffmpeg-probe": "^1.0.6",
        "ffprobe": "^1.1.0",
        "ffprobe-static": "^3.0.0",
        "fluent-ffmpeg": "^2.1.2",
        "fs-extra": "^7.0.1",
        "glob": "^7.1.6",
        "inquirer-select-directory": "^1.2.0",
        "mv": "^2.1.1",
        "node-ffprobe": "^1.2.2",
        "node-localstorage": "^1.3.1",
        "opener": "^1.5.1",
        "path-is-inside": "^1.0.2",
        "request": "^2.88.2",
        "shelljs": "^0.8.4",
        "shx": "^0.3.2",
        "translate-json-object": "^2.3.6",
        "tree-kill": "^1.2.2",
        "zingchart": "^2.9.0"
    },
    "devDependencies": {
        "electron": "^3.1.13",
        "electron-installer-dmg": "^2.0.0",
        "electron-packager": "^13.1.1",
        "electron-winstaller": "^2.7.0"
    }
}
